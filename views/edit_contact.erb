<h2>Edit a Contact</h2>

<form action="/contacts/ <%= @contact.id %>" method="post"> 
	<input type="hidden" name="_method" value="put">
	<strong>First Name:</strong>
	<input type="text" name="first_name" value="<%= @contact.first_name %>" autofocus placeholder="new first name"/>
	<strong>Last Name:</strong>
	<input type="text" name="last_name" value="<%= @contact.last_name %>" placeholder="new last name"/>
	<strong>E-mail Address:</strong>
	<input type="text" name="email" value="<%= @contact.email %>" placeholder="new email"/>
	<strong>Notes:</strong>
	<input type="text" name="notes" value="<%= @contact.notes %>" placeholder="update notes"/>
	<input type="submit" name="Submit" value="Confirm Edit">
	<br />

	
</form>